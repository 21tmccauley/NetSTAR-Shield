{
  "manifest_version": 3,
  "name": "NetStarShield (React JS)",
  "version": "1.1.0",
  "action": { "default_popup": "src/popup/index.html" },
  "background": { "service_worker": "src/background.js", "type": "module" },
  "permissions": ["storage", "tabs"],
  "host_permissions": ["<all_urls>"],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.js"],
      "run_at": "document_end"
    }
  ]
}
